<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Encryptic Loader"
        Width="850"
        Height="580"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Opacity="0"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseDown">

    <Window.Resources>

        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.35"/>
        </Storyboard>

        <Style x:Key="GlowButton" TargetType="Button">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="#6200EE"
                                    CornerRadius="14"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform/>
                                </Border.RenderTransform>

                                <Border.Effect>
                                    <DropShadowEffect Color="#6200EE"
                                                      BlurRadius="28"
                                                      ShadowDepth="0"
                                                      Opacity="0.45"/>
                                </Border.Effect>
                            </Border>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.9"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border CornerRadius="26" BorderThickness="1.5">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6200EE" Offset="0"/>
                <GradientStop Color="#00E5FF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <SolidColorBrush Color="#111111" Opacity="0.94"/>
        </Border.Background>

        <Grid Margin="28">

            <Grid VerticalAlignment="Top" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="E N C R Y P T I C   L O A D E R"
                           FontSize="18"
                           FontWeight="Black"
                           Foreground="White"/>

                <TextBlock x:Name="AdminStatus"
                           Grid.Column="1"
                           Text="Admin Status"
                           Foreground="#FF5555"
                           FontSize="10"
                           FontWeight="Bold"
                           Margin="0,4,12,0"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="RunAsAdminBtn"
                            Content="RUN AS ADMIN"
                            Style="{StaticResource GhostButton}"
                            Width="100"
                            Margin="0,0,6,0"
                            Click="RunAsAdmin_Click"/>
                    <Button Content="✕"
                            Background="Transparent"
                            Foreground="#777"
                            BorderThickness="0"
                            FontSize="18"
                            Width="30"
                            Height="30"
                            Click="Close_Click"
                            ToolTip="Close"/>
                </StackPanel>
            </Grid>

            <StackPanel VerticalAlignment="Center" Width="520" Margin="0,20,0,0">

                <TextBlock Text="ASSEMBLY PATH"
                           Foreground="#666"
                           FontSize="10"
                           FontWeight="Bold"
                           Margin="6,0,0,6"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="PathTextBox"
                             Grid.Column="0"
                             IsReadOnly="True"
                             Height="46"
                             Background="#0B0B0B"
                             Foreground="#BBB"
                             Padding="16"
                             BorderBrush="#222"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             TextChanged="PathTextBox_TextChanged"/>

                    <Button x:Name="BrowseBtn"
                            Grid.Column="1"
                            Content="BROWSE"
                            HorizontalAlignment="Right"
                            Width="95"
                            Margin="6"
                            Style="{StaticResource GlowButton}"
                            Click="Browse_Click"/>
                </Grid>

                <TextBlock x:Name="DllStatus"
                           Text="No DLL selected"
                           Foreground="#666"
                           FontSize="10"
                           Margin="8,0,0,24"
                           Height="16"/>

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="TARGET PROCESS"
                               Foreground="#666"
                               FontSize="10"
                               FontWeight="Bold"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>

                    <Button x:Name="RefreshBtn"
                            Grid.Column="1"
                            Content="🔄 REFRESH"
                            Style="{StaticResource GhostButton}"
                            Width="90"
                            Height="24"
                            FontSize="9"
                            Click="RefreshProcesses_Click"
                            ToolTip="Refresh process list"/>
                </Grid>

                <TextBox x:Name="ProcessSearchBox"
                         Height="38"
                         Background="#0B0B0B"
                         Foreground="#BBB"
                         Padding="12"
                         BorderBrush="#222"
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         TextChanged="ProcessSearch_TextChanged"/>

                <ComboBox x:Name="ProcessComboBox"
                          Height="46"
                          Background="#0B0B0B"
                          Foreground="#BBB"
                          Padding="10"
                          BorderBrush="#222"
                          Margin="0,0,0,16"
                          FontSize="12">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4">
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="White" 
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding Title}" 
                                           Foreground="#888" 
                                           FontSize="10"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding ProcessId, StringFormat='PID: {0}'}" 
                                           Foreground="#666" 
                                           FontSize="9"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock x:Name="ProcessCount"
                           Text="Found 0 processes"
                           Foreground="#555"
                           FontSize="9"
                           Margin="8,0,0,20"/>

                <Button x:Name="InjectBtn"
                        Content="INJECT"
                        Style="{StaticResource GlowButton}"
                        Click="Inject_Click"
                        Margin="0,0,0,20"/>

                <Border Background="#0B0B0B"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="StatusLabel"
                               Text="System Ready"
                               Foreground="#555"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="OpenLogsBtn"
                            Content="📁 OPEN LOGS"
                            Style="{StaticResource GhostButton}"
                            Width="100"
                            Margin="0,0,6,0"
                            Click="OpenLogs_Click"
                            ToolTip="Open logs directory"/>
                    <Button x:Name="MinimizeBtn"
                            Content="🗕 MINIMIZE"
                            Style="{StaticResource GhostButton}"
                            Width="100"
                            Click="Minimize_Click"/>
                </StackPanel>
            </StackPanel>

            <ProgressBar x:Name="InjectProgress"
                         Height="3"
                         VerticalAlignment="Bottom"
                         Foreground="#6200EE"
                         Background="Transparent"
                         BorderThickness="0"
                         Visibility="Collapsed"
                         IsIndeterminate="True"/>
        </Grid>
    </Border>
</Window>